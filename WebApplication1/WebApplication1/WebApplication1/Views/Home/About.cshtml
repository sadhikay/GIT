
<html>
<head>
    <Title>
        Account Details
    </Title>
    <script src="jquery-ui-1.7.1.custom.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>

    <style>
        body {
            font-family: Verdana !important;
            font-size: 10pt;
        }

        #load {
            padding: 8px 12px;
            border-radius: 12px !important;
            background-color: #008CBA !important;
            color: white;
        }

        .keyText {
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            width: 100%;
            padding: 8px 10px;
        }
    </style>
    <script type="text/javascript">
        function Load() {
          
            var name = $("#name").val();
            $("#detailsSum").empty();
           
            $.getJSON("@Url.Action("GetData")", { name: name }, function (data) {
                if (data.length != null && data.length != 0) {
                    $("#detailsSum").append('<tr> <td valign="bottom">Number</td> <td valign="bottom">Name</td><td valign="bottom">Balance</td></tr>');
                    $.each(data, function (i, item) {
                        $("#detailsSum").append('<tr><td valign="bottom">' + item.Name + '</td><td valign="bottom">' + item.Number + '</td> <td valign="bottom">' + item.Balance + '</td></tr>');


                    });
                    }
            });

        }
    </script>
</head>
<body>
    <div style="padding-left:10px;">
        <h1 id="Head">Account Info</h1>
        <div>
            <table cellpadding="3" style="display: inline;">
                <tr>
                    <td valign="bottom"><label for="Accounts">Account Name:</label></td>
                    <td valign="bottom"><input type="text" class="keyText" id="name" value="" /></td>
                    <td valign="bottom"><input id="load" type="button" value="Get Details" onclick="Load()" /></td>
                </tr>
                <tr></tr>

            </table>
            <br />
            <table id="detailsSum"  cellpadding="3" style="display: inline;"></table>
        </div>
    </div>
</body>
</html>
